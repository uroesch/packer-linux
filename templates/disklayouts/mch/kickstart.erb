zerombr
clearpart --all --initlabel --disklabel=gpt
part    biosboot        --fstype="biosboot" --size=1
part    /boot           --fstype="<%= config['fstype'] %>"      --size=2000
part    /boot/efi                           --size=500
part pv.0               --fstype=lvmpv  --grow
volgroup <%= config['vg_name'] %> --pesize=4096 pv.0
logvol /                --fstype="<%= config['fstype'] %>"  --size=42000 --name=root        --vgname=<%= config['vg_name'] %>
logvol /home            --fstype="<%= config['fstype'] %>"  --size=500   --name=home        --vgname=<%= config['vg_name'] %>
logvol swap             --fstype="swap" --size=4000  --name=swap        --vgname=<%= config['vg_name'] %>
